{
    "name": "describo",
    "version": "0.7.3",
    "description": "The tool to describe and package data.",
    "main": "index.js",
    "scripts": {
        "develop": "npm install && electron-webpack dev",
        "compile": "npm install && electron-webpack",
        "dist": "npm run compile && electron-builder",
        "dist:dir": "npm run dist --dir -c.compression=store -c.mac.identity=null",
        "test": "./node_modules/.bin/jest",
        "test:watch": "./node_modules/.bin/jest --watch",
        "build:mac": "electron-webpack && electron-builder --mac --publish always",
        "build:linux": "electron-webpack && electron-builder --linux --publish always",
        "build:win": "./bin/build-windows.sh"
    },
    "build": {
        "afterSign": "bin/notarize.js",
        "appId": "au.edu.uts.describo",
        "productName": "Describo",
        "copyright": "Copyright Â© 2020 University of Technology, Sydney, Australia",
        "mac": {
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "entitlements": "./mac.plist",
            "entitlementsInherit": "./mac.plist",
            "target": [
                "dmg",
                "zip"
            ]
        },
        "dmg": {
            "sign": false
        },
        "win": {},
        "linux": {
            "target": "tar.bz2"
        },
        "publish": [
            "github"
        ],
        "extraFiles": [
            {
                "from": "rclone-binaries/${os}",
                "to": "Resources/bin",
                "filter": [
                    "**/*"
                ]
            }
        ]
    },
    "electronWebpack": {
        "renderer": {
            "webpackConfig": "webpack.extra-config.js"
        }
    },
    "author": "Marco La Rosa",
    "license": "GPLv3",
    "homepage": "https://github.com/UTS-eResearch/describo",
    "bugs": {
        "url": "https://github.com/UTS-eResearch/describo/issues"
    },
    "engines": {
        "node": ">=12.0.0",
        "npm": ">=6.0.0"
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^5.13.0",
        "@fortawesome/fontawesome-svg-core": "^1.2.28",
        "archiver": "^3.1.1",
        "core-js": "^3.6.5",
        "date-fns": "^2.12.0",
        "electron-updater": "^4.2.5",
        "element-ui": "2.13.0",
        "fs-extra": "^8.1.0",
        "hasha": "^5.2.0",
        "highlight.js": "^9.18.1",
        "iv-viewer": "^2.0.1",
        "lodash": "^4.17.15",
        "regenerator-runtime": "^0.13.5",
        "ro-crate": "^1.3.0",
        "ro-crate-html-js": "git+https://github.com/UTS-eResearch/ro-crate-html-js.git",
        "sha.js": "^2.4.11",
        "source-map-support": "^0.5.18",
        "tailwindcss": "^1.3.4",
        "tempy": "^0.5.0",
        "vue": "^2.5.22",
        "vue-router": "^3.1.3",
        "vuex": "^3.2.0",
        "walk": "^2.3.14"
    },
    "devDependencies": {
        "@babel/cli": "^7.7.0",
        "@babel/core": "^7.9.0",
        "@babel/plugin-syntax-dynamic-import": "^7.2.0",
        "@babel/preset-env": "^7.9.5",
        "autoprefixer": "^9.7.6",
        "babel-loader": "^8.1.0",
        "chai": "^4.2.0",
        "clean-webpack-plugin": "^3.0.0",
        "connect-history-api-fallback": "^1.6.0",
        "copy-webpack-plugin": "^5.1.1",
        "css-loader": "^3.5.2",
        "dotenv": "^8.2.0",
        "electron": "^8.2.3",
        "electron-builder": "^22.5.1",
        "electron-notarize": "^0.3.0",
        "electron-webpack": "^2.8.2",
        "electron-webpack-vue": "^2.4.0",
        "file-loader": "^5.1.0",
        "html-webpack-plugin": "^3.2.0",
        "jest": "^25.4.0",
        "jquery": "^3.5.0",
        "jsonld": "^2.0.2",
        "mini-css-extract-plugin": "^0.9.0",
        "node-sass": "^4.13.0",
        "optimize-css-assets-webpack-plugin": "^5.0.3",
        "postcss-loader": "^3.0.0",
        "raw-loader": "^4.0.1",
        "sass-loader": "^8.0.0",
        "terser-webpack-plugin": "^2.2.1",
        "uglifyjs-webpack-plugin": "^2.2.0",
        "vue-loader": "^15.9.1",
        "vue-style-loader": "^4.1.2",
        "vue-template-compiler": "^2.5.22",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.10",
        "webpack-dev-server": "^3.9.0",
        "worker-loader": "^2.0.0"
    }
}
