{
    "name": "describo",
    "version": "0.1.0",
    "description": "The tool to describe and package data.",
    "main": "index.js",
    "scripts": {
        "develop": "npm install && electron-webpack dev",
        "compile": "npm install && electron-webpack",
        "dist": "npm run compile && electron-builder",
        "dist:dir": "npm run dist --dir -c.compression=store -c.mac.identity=null",
        "test": "./node_modules/.bin/jest",
        "test:watch": "./node_modules/.bin/jest --watch",
        "build:mac": "electron-webpack && electron-builder --mac",
        "build:linux": "electron-webpack && electron-builder --linux",
        "build:win": "./bin/build-windows.sh",
        "publish": "electron-builder --publish always"
    },
    "build": {
        "appId": "au.edu.uts.describo",
        "productName": "Describo",
        "mac": {
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "entitlements": "./mac.plist",
            "entitlementsInherit": "./mac.plist",
            "target": [
                "dmg",
                "zip"
            ]
        },
        "win": {},
        "publish": [
            "github"
        ],
        "extraFiles": [
            {
                "from": "rclone-binaries/${os}",
                "to": "Resources/bin",
                "filter": [
                    "**/*"
                ]
            }
        ]
    },
    "electronWebpack": {
        "renderer": {
            "webpackConfig": "webpack.extra-config.js"
        }
    },
    "author": "Marco La Rosa",
    "license": "GPLv3",
    "bugs": {
        "url": "https://github.com/marcolarosa/pdsc-elan-linter/issues"
    },
    "homepage": "https://github.com/marcolarosa/pdsc-elan-linter#readme",
    "dependencies": {
        "@fortawesome/fontawesome-free": "^5.12.0",
        "@fortawesome/fontawesome-svg-core": "^1.2.26",
        "core-js": "^3.4.0",
        "date-fns": "^2.9.0",
        "electron-updater": "^4.2.0",
        "element-ui": "^2.12.0",
        "fs-extra": "^8.1.0",
        "leaflet": "^1.6.0",
        "leaflet-providers": "^1.9.1",
        "lodash": "^4.17.15",
        "regenerator-runtime": "^0.13.3",
        "sha.js": "^2.4.11",
        "source-map-support": "^0.5.16",
        "tailwindcss": "^1.1.4",
        "vue": "^2.5.22",
        "vue-router": "^3.1.3",
        "vuex": "^3.1.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.7.0",
        "@babel/core": "^7.7.2",
        "@babel/plugin-syntax-dynamic-import": "^7.2.0",
        "@babel/preset-env": "^7.7.1",
        "autoprefixer": "^9.7.4",
        "babel-loader": "^8.0.6",
        "chai": "^4.2.0",
        "clean-webpack-plugin": "^3.0.0",
        "connect-history-api-fallback": "^1.6.0",
        "copy-webpack-plugin": "^5.1.1",
        "css-loader": "^3.2.0",
        "electron": "^8.0.3",
        "electron-builder": "^22.1.0",
        "electron-webpack": "^2.7.4",
        "electron-webpack-vue": "^2.3.0",
        "file-loader": "^5.1.0",
        "html-webpack-plugin": "^3.2.0",
        "jest": "^25.1.0",
        "jquery": "^3.4.1",
        "jsonld": "^2.0.2",
        "mini-css-extract-plugin": "^0.9.0",
        "node-sass": "^4.13.0",
        "optimize-css-assets-webpack-plugin": "^5.0.3",
        "postcss-loader": "^3.0.0",
        "raw-loader": "^4.0.0",
        "ro-crate": "^1.3.0",
        "sass-loader": "^8.0.0",
        "terser-webpack-plugin": "^2.2.1",
        "uglifyjs-webpack-plugin": "^2.2.0",
        "vue-loader": "^15.7.2",
        "vue-style-loader": "^4.1.2",
        "vue-template-compiler": "^2.5.22",
        "webpack": "^4.41.2",
        "webpack-cli": "^3.3.10",
        "webpack-dev-server": "^3.9.0",
        "worker-loader": "^2.0.0"
    }
}
